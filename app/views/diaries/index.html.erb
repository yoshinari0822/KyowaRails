<p style="color: green"><%= notice %></p>

<% content_for :title, "Diaries" %>

<h1>みんなの日記</h1>

<div id="みんなの日記">
  <% @diaries_by_date.each do |date, diaries| %>
    <h2><%= date.strftime("%Y-%m-%d") %></h2>
    <% diaries.each do |diary| %>
      <%= render diary %>
    <% end %>
  <% end %>
</div>

<%= link_to "日記を追加", new_diary_path %>
<%= button_to 'Logout', destroy_user_session_path, method: :delete %>
