<p style="color: green"><%= notice %></p>

<% content_for :title, "Diaries" %>

<h1>Diaries</h1>

<div id="diaries">
  <% @diaries_by_date.each do |date, diaries| %>
    <h2><%= date.strftime("%Y-%m-%d") %></h2>
    <% diaries.each do |diary| %>
      <%= render diary %>
    <% end %>
  <% end %>
</div>

<%= link_to "New diary", new_diary_path %>
