<%= form_with(model: diary) do |form| %>
  <% if diary.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(diary.errors.count, "error") %> prohibited this diary from being saved:</h2>

      <ul>
        <% diary.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_field :text %>
  </div>

  <div>
    <%= form.label :tension, style: "display: block" %>
    <% ["0", "1", "2"].each do |value| %>
      <%= form.radio_button :tension, value %>
      <% if value == "0" %>
        <%= form.label :tension, "😁"%>
      <% elsif value == "1" %>
        <%= form.label :tension, "🙂"%>
      <% else value == "2" %>
        <%= form.label :tension, "😞"%>
      <% end %>
    <% end %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
